					  if (sw==0)
				   	 {cout<<"Numero invalido"<<endl;
					  num = atoi(numero);
					  cout<<num;
					 }
					else
					{
					cout<<"Numero Invalido"<<endl;
					}
					system("pause");
					cout<<"Ingrese la opcion que corresponde: ";
					cin>>op12;
				    }while(op12<0 | op12>6);
					system("cls");
					switch(op12)
					{case 1:
						{cout<<"El Museo del Tesoro se encuentra: "<<endl;
						cout<<"Plaza 25 de Mayo #59 Esquina norte Sucre"<<endl;
						cout<<"**********HORARIO DE ATENCION**********"<<endl;
