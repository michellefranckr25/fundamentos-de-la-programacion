						}
					case 6:
						{cout<<"Salir"<<endl;
						break;
						}
					default : break;
					}
				   }while(op12>6);
				   }
			   }
			 }while(op11>3);
			}//termina sucre
}
 cout<<"Si desea continuar presione 1: "<<endl;
 cin>>cont;
}while(cont==1);
 getch();
}



int validar_num(char numero[50])
{
	int i = 0, sw = 0, j;
	j = strlen(numero);
	while (i < j && sw == 0)
	{
		if (isdigit(numero[i]) != 0)
			i++;
		else
			sw = 1;

	}
	return(sw);
}
