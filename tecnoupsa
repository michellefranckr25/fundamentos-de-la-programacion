						cout<<"***************************************"<<endl;
						break;
						}
					case 2:
						{cout<<"El Museo Etnografia y Folklore se encuentra: "<<endl;
						cout<<"Espaňa #74"<<endl;
						cout<<"**********HORARIO DE ATENCION**********"<<endl;
						cout<<"*            lunes-viernes:          *"<<endl;
						cout<<"*             09:30 - 12:30           *"<<endl;
						cout<<"*             14:30 - 18:30           *"<<endl;
						cout<<"***************************************"<<endl;
						break;
						}
					case 3:
						{cout<<"El Museo del Convento de la RECOLETA se encuentra: "<<endl;
						cout<<"Polanco #162"<<endl;
						cout<<"**********HORARIO DE ATENCION**********"<<endl;
						cout<<"*            lunes-viernes:           *"<<endl;
						cout<<"*             09:00 - 11:30           *"<<endl;
						cout<<"*             14:30 - 17:30           *"<<endl;
						cout<<"***************************************"<<endl;
						break;
						}
					case 4:
						{cout<<"El Museo Colonial Charcas U. S. F. X. se encuentra: "<<endl;
						cout<<" Bolivar #698"<<endl;
