// raicesdelaecuacioncuadratica.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main(){
	float a,b,c,X1,X2;
	cout<<"ingrese el valor de a: "<<endl;
	cout<<"ingrese el valor de b: "<<endl;
	cout<<"ingrese el valor de c: "<<endl;
	cin>>a>>b>>c;
	if(a!=0){
		if((b*b-4*a*c)>0)
		{
			X1=(-b+sqrt(b*b-4*a*c))/(2*a);
			X2=(-b-sqrt(b*b-4*a*c))/(2*a);
			cout<<"la raices de la ecuacion cuadratica son: "<<endl<<X1<<endl<<X2;
		}
	}
getch();
}
